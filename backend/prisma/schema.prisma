generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Category {
  NOTEBOOKS
  COMPUTADORAS
  MONITORES
  IMPRESORAS
}

enum Role {
  USER
  ADMIN
}

type ProductSpecs {
  cpu             String?
  ram             String?
  storage         String?
  gpu             String?
  os              String?
  
  screenSize      String? 
  resolution      String? 
  refreshRate     String? 
  panelType       String? 

  printType       String?
  printSpeed      String? 
  connectivity    String? 
  maxPrintSize    String? 
  continuousSystem String? 
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sku         String   @unique
  name        String
  brand       String   @default("Gen√©rico")
  category    Category
  
  priceUsd    Float
  inStock     Boolean  @default(true)
  
  imageUrl    String
  gallery     String[]

  specs       ProductSpecs

  isActive    Boolean  @default(true)
  lastScraped DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cartItems CartItem[]

  @@map("products")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String?  
  name      String
  role      Role     @default(USER)
  
  googleId        String?   @unique // Para login con Google
  avatar          String?   // Foto de perfil (Google o subida)
  
  resetToken      String?   
  resetTokenExpiry DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  cartItems CartItem[]
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  @@unique([userId, productId]) 
}